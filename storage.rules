rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Screenshots storage structure: /projects/{projectId}/screenshots/{nodeId}.png
    match /projects/{projectId}/screenshots/{screenshotId} {
      // Allow public read access for screenshots
      allow read: if true;
      
      // Allow write access for development (no auth required)
      // In production, add authentication back
      allow write: if 
        // Ensure file is an image
        request.resource.contentType.matches('image/.*') &&
        // Limit file size to 5MB
        request.resource.size < 5 * 1024 * 1024;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
