rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Screenshots storage structure: /screenshots/{projectId}/{nodeId}.{ext}
    match /screenshots/{projectId}/{screenshotId} {
      // Allow public read access for screenshots
      allow read: if true;
      
      // Allow write access for development (no auth required)
      // In production, add authentication back
      allow write: if 
        // Ensure file is an image or SVG
        (request.resource.contentType.matches('image/.*') || 
         request.resource.contentType == 'image/svg+xml') &&
        // Limit file size to 5MB
        request.resource.size < 5 * 1024 * 1024;
    }
    
    // Allow all other paths for development
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
